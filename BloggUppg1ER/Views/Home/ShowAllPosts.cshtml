@model IEnumerable<BloggUppg1ER.Models.Posts>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <h2>
        Posts overview (latest first)
    </h2>

    <form asp-controller="Home" asp-action="ShowAllPosts" method="post">
        <div class="form-group">
            <table>
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Category</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input class="form-control" type="text" name="titleSearch" value="" /></td>
                        <td><input class="form-control" type="text" name="categorySearch" value="" /></td>
                        <td><input id="search" type="submit" value="Search" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </form>

    <div>
        <table>
            <thead>
                <tr>
                    <th>Post title</th>
                    <th>Posted on</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@post.Title</td>
                            <td>@post.PostedOn</td>

                            @*Equivalent to Html.ActionLink()*@
                            <td><a asp-controller="Home" asp-action="ShowPostDetails" asp-route-id="@post.PostId">Show details</a> </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No Posts found!!</td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
