@model BloggUppg1ER.ViewModels.PostViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form asp-controller="Home" asp-action="CreatePost" method="post">

        @*<input asp-for="Id" type="hidden" />*@

        <div class="form-group">
            <label asp-for="CategoryID">Categories:</label>
            <select class="form-control" asp-for="CategoryID" asp-items="Model.Categories">
                <option disabled selected value="">Select a Category</option>
            </select>
            @*<input class="form-control" type="text" asp-for="CategoryName" />*@
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" type="text" asp-for="Title" />
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea class="form-control" type="text" asp-for="Content"></textarea>

        </div>
        <input asp-for="PostedOn" type="datetime-local" />

        <input type="submit" value="Post" />

    </form>




</body>
</html>
